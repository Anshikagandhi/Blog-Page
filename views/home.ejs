
        
 <link rel="stylesheet" href="/css/home.css">
 
 <div id="home-container">
    <section id="feed-posts">
        <h1 style="font-size: 50px;"> 
          POSTS
          <i class="fas fa-comments"></i>
        </h1>
        <% if (locals.user){ %>
   
         
           <form action="/posts/create" method="POST" id="new-post-form">
             <textarea name="content" cols="30" rows="3" placeholder="type here....." style="font-size: 30px"></textarea>
             <input type="submit" value="Post" style="width: 50px; height: 50px;">
          </form>
          <% }%>

           <div id="posts-list-container">
               <ul>
                   <% for (post of posts){ %>
                      
                       <%-include('_post') -%> 
                       
                       <%}
                       %>
               </ul>
   
           </div>
         </section>
   
         <section id="users-friends">
           <h1 style="font-size: 30px">My Friends
            <i class="fas fa-user-friends"></i>
          </h1>
           <% for(u of all_users){ %>
             <li style="font-size: 30px;"  >
               <a href="/users/profile/<%=  u.id %>" style="color: lightgoldenrodyellow;" ><%= u.name %></a>
             </li>
             <br>
             
   
          <% }%>
          <% if (locals.user){ %>
          
          <div style="border:2px solid grey; width: 350px; height: 350px;" id="user-chat-box">
            <div style="width: 100px;height: 30px; background-color: rgb(230, 129, 145); margin: 25px; padding: 5px; color: papayawhip;">
              Other message

            </div>
            <div style="width: 100px;height: 30px; background-color:rgb(97, 168, 196); margin: 25px; padding: 5px; margin-left: 200px; color: papayawhip; ">
               Self message

            </div>
            

            <form style="margin-top: 180px;">
              <input type="text" placeholder="Enter the message" required style="width: 80%; height: 38px;">
              <input type="submit" name="SEND" style="background-color: rgb(84, 216, 84);height: 35px;;">

            </form>
            


          </div>
          <% } %>
   
         </section>
           
 </div>
 <script src="/js/home_posts.js"></script>
 
<script src="/js/toggle_likes.js"></script>
